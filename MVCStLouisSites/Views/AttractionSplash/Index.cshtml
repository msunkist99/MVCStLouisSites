@model MVCStLouisSites.ViewModels.DisplayAttractions.AttractionSplashIndexViewModel

@{
    ViewData["Title"] = ("Attraction - " + @Model.Name);
}

<h1>@Model.Name</h1>

<div>
    <h4>@Model.Description</h4>
    <hr />
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ratings[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ratings[0].Comments)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model.Ratings)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comments)
                    </td>
                    <td>
                        <a asp-controller="AttractionSplash" asp-action="Index" asp-route-id="@item.Id">Details</a> |
                    </td>
                </tr>
            }}
    </tbody>
</table>

