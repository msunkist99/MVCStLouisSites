@model IEnumerable<MVCStLouisSites.ViewModels.AttractionViewModels.AttractionIndexViewModel>

@{
    ViewData["Title"] = "StLouisSites ";
}

<h1>St Louis Sites</h1>

<p>
    <a asp-action="Create">Create New Attraction</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null )
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="/Attraction/Detail/@item.Id">@item.Name</a>

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-controller="Attraction" asp-action="Detail" asp-route-id="@item.Id">Details</a> |
                        <a asp-controller="Attraction" asp-action="Update" asp-route-id="@item.Id">Update</a> |
                        <a asp-controller="Attraction" asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                    </td>
                </tr>
            }           }
    </tbody>
</table>
