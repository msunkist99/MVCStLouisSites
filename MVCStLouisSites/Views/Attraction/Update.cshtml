@model MVCStLouisSites.ViewModels.AttractionViewModels.AttractionUpdateViewModel

@{
    ViewData["Title"] = "StLouisSites-Attraction Update";
}

<h2>Update Attraction - @Model.Name</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BackgroundImageId" class="control-label"></label>
                <input asp-for="BackgroundImageId" class="form-control" />
                <span asp-validation-for="BackgroundImageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IconImageId" class="control-label"></label>
                <input asp-for="IconImageId" class="form-control" />
                <span asp-validation-for="IconImageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<h3>Locations</h3>
<a asp-controller="Location" asp-action="Create" asp-route-id="@Model.Id">Add Location</a>

<table class="table">
    <thead>
        <tr>
            <th>
                Street Address
            </th>
            <th>
                City
            </th>
            <th>
                State
            </th>
            <th>
                Zip
            </th>
            <th>
                County
            </th>
            <th>
                NeighborhoodId
            </th>
            <th>
                GPS
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LocationViewModels)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StreetAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.County)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NeighborhoodId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GPS)
                </td>
                <td></td>
                <td>
                    <a asp-controller="Location" asp-action="Update" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Location" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<h3>Reviews/Comments</h3>
<h4>Number of Reviews - @Model.RatingCount / Average Review - @Model.RatingAverage</h4>
<a asp-controller="Rating" asp-action="Create" asp-route-id="@Model.Id">Add Rating/Comments</a>

<table class="table">
    <thead>
        <tr>
            <th>
                Rating
            </th>
            <th>
                Comments
            </th>
            <th>
                Date
            </th>
             <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RatingViewModels)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Stars)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td></td>
                <td>
                    <a asp-controller="Rating" asp-action="Update" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Rating" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to Attraction List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
